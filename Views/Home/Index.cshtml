@using WebLongChau.Models
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@model  List<Product>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../ProductImage/img/" + item.ProductIamge)">
                @if (!string.IsNullOrEmpty(item.ProductIamge))
                {
                    <img src="@Url.Content("../ProductImage/img/" + item.ProductIamge)" alt="@item.ProductName">
                }
                else
                {
                    <img src="~/ProductImage/default-image.jpg" alt="">
                }
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a href="#">@item.ProductName</a></h6>
                <h5>@item.Price</h5>
            </div>
        </div>
    </div>
}




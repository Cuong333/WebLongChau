@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebLongChau.Models.Product>

@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>List Product</h1>

<p>
    <a asp-action="AddProduct" class="btn btn-primary">Add new Product</a>
</p>
<p>
    @TempData["Message"]
</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIamge)
            </th> 
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model) 
            {

                <tr class="table-success">
                    <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                 <td>
                    @if (!string.IsNullOrEmpty(item.ProductIamge))
                    {
                        <img src="@Url.Content(item.ProductIamge)" alt="" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>


               @*  <td>
                    @Html.DisplayNameFor(model => model.ProductIamge)
                </td> *@

                <td>
                    <a asp-action="EditProduct" asp-route-ProductId="@item.ProductId">Edit</a> |           
                    <a asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId">Delete</a>
                </td>                 
            </tr>         
        }
    </tbody>
</table>
